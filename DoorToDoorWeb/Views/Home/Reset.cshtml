@section Title{Reset Password}
@model ResetPasswordViewModel

    <div class="main-content">
        <div class="container">
            <h2>Please Reset Your Password</h2>
            <form asp-controller="Home" asp-action="Reset" method="post" id="password-reset-form">
                <input type="hidden" asp-for="EmailAddress" value="@(Model.EmailAddress)" />
                <div class="form-group">
                    <input asp-for="Password" type="password" placeholder="Password"/>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password"/>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="form-group">
                    <button>Submit</button>
                    <span>
                        @Html.ValidationMessage("invalid", new { @class = "field-validation-error" })
                    </span>
                </div>
            </form>
        </div>
    </div>